<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#000000">


    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvUsernameProfile"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/user_pofile_image_description" />

    <TextView
        android:id="@+id/tvUsernameProfile"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="@string/profile_username_text_field"
        android:textColor="@color/devArtGreen"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserImage" />

    <ImageView
        android:id="@+id/ivCountryIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/deviant_art_logo_description"
        android:src="@drawable/ic_baseline_fmd_good_24_grey"
        app:layout_constraintEnd_toStartOf="@+id/tvProfileCountry"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernameProfile" />

    <TextView
        android:id="@+id/tvProfileCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="88dp"
        android:text="@string/profile_country_text_field"
        android:textColor="@color/devArtWhite"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ivBirthdayIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernameProfile" />

    <ImageView
        android:id="@+id/ivBirthdayIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_cake_24"
        app:layout_constraintEnd_toStartOf="@+id/tvProfileBirthday"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernameProfile"
        android:contentDescription="@string/birhday_icon_description" />

    <TextView
        android:id="@+id/tvProfileBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="@string/profile_birthday_text_string"
        android:textColor="@color/devArtWhite"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernameProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>